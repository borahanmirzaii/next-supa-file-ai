# Supabase Configuration
# Get these from: https://app.supabase.com/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Google Gemini AI
# Get from: https://makersuite.google.com/app/apikey
GOOGLE_GENERATIVE_AI_API_KEY=your-gemini-api-key-here

# MCP - Google Workspace Integration (Optional)
# Get from: https://console.cloud.google.com/apis/credentials
MCP_GOOGLE_CLIENT_ID=your-google-client-id
MCP_GOOGLE_CLIENT_SECRET=your-google-client-secret
MCP_GOOGLE_REDIRECT_URI=http://localhost:3000/api/auth/callback/google

# MCP - Notion Integration (Optional)
# Get from: https://www.notion.so/my-integrations
MCP_NOTION_API_KEY=secret_your-notion-api-key

# MCP - Jira Integration (Optional)
# Get from: https://id.atlassian.com/manage-profile/security/api-tokens
MCP_JIRA_API_TOKEN=your-jira-api-token
MCP_JIRA_DOMAIN=your-domain.atlassian.net
MCP_JIRA_EMAIL=your-email@example.com

# MCP - Slack Integration (Optional)
MCP_SLACK_BOT_TOKEN=xoxb-your-bot-token
MCP_SLACK_SIGNING_SECRET=your-signing-secret

# MCP - GitHub Integration (Optional)
MCP_GITHUB_TOKEN=ghp_your-github-token

# Application Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# File Upload Configuration
MAX_FILE_SIZE=52428800  # 50MB in bytes
ALLOWED_MIME_TYPES=application/pdf,image/jpeg,image/png,text/plain,application/json

# AI Configuration
GEMINI_MODEL=gemini-pro
GEMINI_VISION_MODEL=gemini-pro-vision
EMBEDDING_DIMENSION=768
MAX_TOKENS=8192

# Rate Limiting (Optional - requires Upstash Redis)
# UPSTASH_REDIS_REST_URL=https://your-redis.upstash.io
# UPSTASH_REDIS_REST_TOKEN=your-redis-token

# Analytics (Optional)
# NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Error Tracking (Optional - Sentry)
# NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn
# SENTRY_AUTH_TOKEN=your-sentry-auth-token
